<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/layout2"
    android:background="@drawable/grad_list"
    tools:context=".gamePage">


    <ImageButton
        android:id="@+id/ReturnToMain"
        android:layout_width="66dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backarrow"
        android:scaleType="fitCenter"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/backToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReturnToMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-17dp"
        android:text="Back to main " />

    <Button
        android:id="@+id/Answer1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backToMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/scoreBackground"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backToMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/scoreBackground"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backToMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="-137dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/scoreBackground"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backToMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="-136dp"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/scoreBackground"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionWindow"
        android:layout_width="319dp"
        android:layout_height="83dp"
        android:layout_alignStart="@+id/ReturnToMain"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-131dp"
        android:layout_marginTop="68dp"
        android:textAlignment="center"
        android:textColor="@color/inputBackGround"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/scoreBackground"
        android:gravity="top|left|right"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/gameScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Score: "
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameScoreTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/questionQounter"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/amountOfQuestions"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="103dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/amountOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gameScoreTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="-2dp"
        android:text="/  15"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

</RelativeLayout>